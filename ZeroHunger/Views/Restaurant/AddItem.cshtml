@model ZeroHunger.DTOs.CollectRequestsFooditemDTO

@{
    ViewBag.Title = "Add Item";
}

<h2>Add Item</h2>

@using (Html.BeginForm("AddItem", "Restaurant", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ItemName)
        @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantity)
        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExpiryDate)
        @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Add Item</button>
    <a href="@Url.Action("ShowResItemDetails", "Restaurant")" class="btn btn-secondary">View Added item</a>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

